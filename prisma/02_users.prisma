model User {
  id                 String            @id @default(cuid())
  nickname           String?
  gender             Gender
  pronoun            String?
  dateOfBirth        String?
  cellPhonenumber    String
  phoneNumber        String?
  documentOfIdentity String?
  role               UserRole
  classes            UserRole[]
  user               String
  email              String            @unique
  password           String
  image              String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  firstName          String
  lastName           String
  address            Address?
  classesAsAssistant Class[]           @relation("ClassToAssistant")
  classesAsTeacher   Class[]           @relation("ClassToTeacher")
  classAttendances   ClassAttendance[]
  accounts           Account[]
  sessions           Session[]

  @@schema("users")
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@schema("users")
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("users")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@schema("users")
}

enum UserRole {
  GESTOR
  PROFESSOR
  SECRETARIA

  @@schema("users")
}
